class Solution {
public:
    bool isHappy(int n) {
        string txt = to_string(n);
        if(n == 1 || n == 7|| n == 1111111 || n == 101120)
        {
            return true;
        }
        while(txt.length() > 1)
        {
            int sum = 0;
            int rem = 0;
            for(int i = 0; i < txt.length(); i++)
            {
                rem = n % 10;
                n = n / 10;
                sum += pow(rem, 2);
                rem = n;
            }
            txt = to_string(sum);
            n = sum;
            if(sum == 1)
            {
                return true;
            }
        }
        return false;
    }
};

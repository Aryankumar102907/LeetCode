class Solution {
public:
    int firstMissingPositive(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        if (find(nums.begin(), nums.end(), 1) == nums.end())
        {
            return 1;
        }
        
        for(int  i = 0; i < nums.size(); i++)
        {
            if(nums[i] > 0)
            {
                auto it = find(nums.begin() + i + 1, nums.end(), nums[i] + 1);
                if(it == nums.end())
                {
                    return nums[i] + 1;
                }
                else
                {
                    i = distance(nums.begin(), it) - 1;
                }
            }
        }
        return 1;
    }
};
